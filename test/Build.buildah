#!/bin/bash

# Build a centos6 image using buildah to see if it's a good option for #184. 
# Buildah requires a registries.conf file. In order to stremline the process 
# we include a registries.conf file in this directory and manually include it
# with a command-line parameter. 
#
# ch-test-scope: standard

set -ex

srcdir=$1
tarball_gz=${2}.tar.gz
workdir=$3

buildah --registries-conf registries.conf bud -f Dockerfile.alpine -t alpine36 .
image_id=$(buildah images | egrep centos | awk '{print $3}')
buildah push "$image_id" oci:./oci:alpine36
umoci unpack --rootless --image ./oci:alpine36 ./alpine36
( cd img && tar czf "$tarball_gz" -- rootfs )
